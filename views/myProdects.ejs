<%- include ('./partials/_dashboardHeader') %>

    <div class="container-fluid">
        <div class="row">

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <%- include ('./partials/_sidebarmenu') %>

                <%- include ('./partials/_ads') %>


                <%- include ('./partials/error') %>
                <h2>سلع <%= user.displayName %>
                </h2>


 

                <nav aria-label="d-flex">
                  <ol class="nav">
                    <li class="nav-item btn"><a href="/user/profile">ملفي الشخصي</a></li>
                    <li class="nav-item btn"><a href="/prodects/myfav">المفضلة</a></li>
                    <li class="nav-item btn"><a href="/prodects/myProdects"> منتجاتي</a></li>
                    <!-- <li class="nav-item btn" aria-current="page">  </li> -->
                  </ol>
                </nav>



    <div class="album py-5 bg-light">
        <div class="">
    
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% if(march !='' ) { %>
                <% march.forEach(function(prodect, index){ %>

            <div class="col-6">
              <div class="card shadow-sm">
             
                <img src="<%= prodect.image %>" width="100%" height="180"
                class="bd-placeholder-img card-img-top mob_img" alt="<%= prodect.name %> "
                loading="lazy">
                <div class="card-body">
                  <p class="card-text">
                    <%= prodect.name %>
                </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="/prodects/<%= prodect._id %>" class="btn mx-1 btn-sm btn-outline-primary">عرض</a>
                  
                     
                       <form action="/prodects/<%= prodect._id %>" method="post"
                        id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">

                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fa fa-trash text-danger"></i> حزف
                           </button>
                          
                    </form>
             

                    </div>
                    <small class="text-danger prise"><%= prodect.prise %> ج س </small>
                  </div>
                </div>
              </div>
            </div>
    
      
        <% }) %>
            <% } else { %>
                <p>لا يوجد سلع حاليا</p>
                <% } %>

            </div>
          </div>
        </div>
      </div>

      </main>
    </div></div>