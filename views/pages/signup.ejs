  <main class="form-signin w-100 m-auto">
    <a class="mob-logo text-dark btn" href="/">
      <h3 class="text-center">دلالة</h3>
    </a>
    <form action="/user/signup" method="post" class="">
      <img class="mb-4 logo" src="/imgs/delala-logo.png" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal"> التسجيل </h1>
      <%- include ('../partials/error') %>

      <div class="form-floating">
        <input type="text" name="displayName" minlength="4" required class="form-control" name="username" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">الاسم</label>
      </div>
      <div class="form-floating">
        <input type="email" class="form-control" required name="username" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">الايميل</label>
      </div>
      <div class="form-floating">
        <input type="password" required class="form-control" id="floatingPassword" placeholder="Password" name="password">
        <label for="floatingPassword">كلمه السر</label>
      </div>
  
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> تزكرني
        </label>
      </div>
<div class="mb-1">
  <small class="text-muted">بالضغط علي تسجيل فانت توافق علي <a href="/term">الشروط و الاحكام</a></small>

</div>
      <button class="w-100 btn btn-lg btn-success" type="submit"> التسجيل</button>
      <a class="w-100 btn btn-lg btn-primary my-2" href="/user/login">لديك حساب مسبقا !!</a>

      <hr class="my-4">
      <h2 class="fs-5 fw-bold mb-3">او يمكنك استخدام</h2>
    </form>
    <a href="/auth/google" class="w-100 py-2 my-2 btn btn-danger rounded-3">
      <i class="fab fa-google"></i>
      التسجيل بحساب قوقل
    </a>
    <a href="/auth/facebook" class="w-100 py-2 my-2 btn btn-primary rounded-3">
      <i class="fab fa-facebook"></i>
      التسجيل بواسطه فيسبوك
    </a>
    <a class="w-100 btn btn-lg my-2" href="/user/login"> لديك حساب مسبقا</a>
