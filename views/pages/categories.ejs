<%- include ('../partials/_dashboardHeader') %>

  <div class="container-fluid">
    <div class="row">
      <%- include ('../partials/_sidebarmenu') %>


        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <%- include ('../partials/_ads') %>



            <h1 class="pb-4">التصنيف حسب الاقسام</h1>



            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">الرئيسية</a></li>
                <li class="breadcrumb-item"><a href="/categories">الاقسام</a></li>
                <li class="breadcrumb-item active" aria-current="page"> تصفح الاقسام</li>
              </ol>
            </nav>

            <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">

              <% if(typeof categories !=='undefined' && categories.length> 0) { %>

                <% categories.forEach(function(category, index) { %>
                  <a href="/categories/<%- category.name %>" class="col text-center category__link">
                    <div class="category__img shadow">
                      <img src="/imgs/cat/<%- category.image %>" alt="<%- category.name %>" loading="lazy">
                    </div>
                    <div class="pt-1">
                      <%- category.ar %>
                    </div>
                  </a>
                  <% }) %>
                    <% } %>
            </div>


            <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
              <% if(typeof categoryById !=='undefined' && categoryById.length> 0) { %>
                <% categoryById.forEach(function(prodect, index){ %>
                  <a href="/prodects/<%= prodect._id %>" class="col text-center category__link">
                    <div class="category__img category__img--large shadow">
                      <img src="<%= prodect.image[0] %>" alt="<%= prodect.name %>" loading="lazy">
                    </div>
                    <div class="pt-1">
                      <%= prodect.name %>
                    </div>
                  </a>
                  <% }) %>
                    <% } else { %>
                      <p>لا يوجد منتج</p>
                      <% } %>
            </div>






        </main>
    </div>
  </div>